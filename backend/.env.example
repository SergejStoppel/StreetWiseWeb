# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis Configuration (for BullMQ)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_SUCCESS_URL=${FRONTEND_URL}/billing/success
STRIPE_CANCEL_URL=${FRONTEND_URL}/billing/cancel

# OpenAI Configuration (for AI analysis)
OPENAI_API_KEY=sk-your-openai-api-key

# Analysis Configuration
ANALYSIS_TIMEOUT=300000
MAX_CONCURRENT_ANALYSES=5
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Storage Configuration
STORAGE_BUCKET=analysis-assets
ASSET_BASE_URL=https://your-project.supabase.co/storage/v1/object/public

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Monitoring Configuration
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@sitecraft.com

# CDN Configuration (optional)
CDN_URL=
CDN_ENABLED=false

# Development Configuration
DEV_SKIP_AUTH=false
DEV_MOCK_PAYMENTS=true
DEV_SEED_DATABASE=true