{
  "name": "sitecraft-backend-v2",
  "version": "2.0.0",
  "description": "StreetWiseWeb Backend V2 - Multi-tenant accessibility analysis platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "docs:generate": "swagger-jsdoc -d src/config/swagger.ts src/api/routes/*.ts -o docs/api.json",
    "docs:serve": "swagger-ui-serve docs/api.json",
    "worker:master": "tsx src/workers/master.worker.ts",
    "worker:fetcher": "tsx src/workers/fetcher.worker.ts",
    "worker:accessibility": "tsx src/workers/accessibility/index.ts",
    "worker:seo": "tsx src/workers/seo/index.ts",
    "worker:performance": "tsx src/workers/performance/index.ts"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "seo",
    "performance",
    "analysis",
    "multi-tenant",
    "typescript"
  ],
  "author": "SiteCraft Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.38.4",
    "bullmq": "^4.15.2",
    "ioredis": "^5.3.2",
    "puppeteer": "^21.6.1",
    "axe-core": "^4.8.3",
    "lighthouse": "^11.4.0",
    "stripe": "^14.7.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "sharp": "^0.33.1",
    "mime-types": "^2.1.35",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "prom-client": "^15.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/mime-types": "^2.1.4",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}